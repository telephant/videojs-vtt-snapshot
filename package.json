{
  "name": "videojs-vtt-snapshot",
  "version": "1.0.0",
  "description": "Video.js plugin for displaying thumbnails from VTT files when hovering over the progress bar",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "NODE_ENV=production tsup --minify",
    "dev": "concurrently \"tsup --watch\" \"node example/server.js\"",
    "lint": "eslint src",
    "prepare": "pnpm build",
    "example": "pnpm build && node example/server.js",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "videojs",
    "videojs-plugin",
    "thumbnails",
    "vtt",
    "preview",
    "snapshot",
    "hover"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.9.0",
  "peerDependencies": {
    "video.js": "^8.0.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/video.js": "^7.3.58",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "@vitest/coverage-v8": "^1.4.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.30.1",
    "express": "^5.1.0",
    "happy-dom": "^13.9.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "video.js": "^8.23.3",
    "vitest": "^1.4.0"
  }
}
